{%- set reportIssueLink = getReportIssueLink() -%}
{%- if (reportIssueLink) %}
    <a class="dropdown-item d-flex align-items-center gap-2" href="{{ reportIssueLink }}" id="btnReportIssue" rel="nofollow noopener" target="_blank">
        <i class="fas fa-comment-dots"></i>
        Give feedback
    </a>
{% endif -%}

{%- set copySources = getSettings('copy_sources') -%}
{%- if (copySources) %}
    <a class="dropdown-item d-flex align-items-center gap-2" href="{{ copyDownload(sourceFilename(), '_sources/' ~ sourceFilename() ~ '.txt') }}" rel="nofollow noopener" target="_blank">
        <i class="fas fa-code"></i>
        View source
    </a>
{% endif -%}

{%- set howtoEditButton = getSettings('how_to_edit') -%}
{%- if (howtoEditButton) %}
    <a class="dropdown-item d-flex align-items-center gap-2" href="{{ howtoEditButton }}" id="btnHowToEdit" rel="nofollow noopener" target="_blank">
        <i class="fas fa-info-circle"></i>
        How to edit
    </a>
{% endif -%}

{%- set gitHubLink = getEditOnGitHubLink() -%}
{%- if (gitHubLink) %}
    <a class="dropdown-item d-flex align-items-center gap-2" href="{{ gitHubLink }}" id="btnEditOnGitHub" rel="nofollow noopener" target="_blank">
        <i class="fab fa-github"></i>
        Edit on GitHub
    </a>
{% endif -%}
