{% extends "structure/layout.html.twig" %}

{% block head %}
    {%- for headerNode in node.headerNodes -%}
        {{ renderNode(headerNode) }}
    {%- endfor -%}
    {{ parent() }}
{% endblock %}


{% block navbar %}
    {% include "structure/navigation/navbar.html.twig" %}
{% endblock %}

{% block menu_doc %}
    {% include "structure/navigation/menu_doc.html.twig" %}
{% endblock %}

{% block body %}
    <!-- content start -->
    {% for child in node.children -%}
        {{ renderNode(child) }}
    {%~ endfor -%}
    <!-- content end -->
{% endblock %}

{% block breadcrumb %}
    <div aria-label="breadcrumbs navigation" class="breadcrumb-bar" role="navigation">
        {{ renderBreadcrumb() }}
        <div class="breadcrumb-additions">
            <a class="btn btn-sm btn-light" href="_sources/Index.rst.txt" rel="nofollow noopener" target="_blank">
                <span class="btn-icon"><span class="fas fa-code"></span></span>
                <span class="btn-text">View source</span>
            </a>
            <a class="btn btn-sm btn-light" href="https://docs.typo3.org/m/typo3/docs-how-to-document/master/en-us/WritingDocsOfficial/GithubMethod.html" id="btnHowToEdit" rel="nofollow noopener" target="_blank">
                <span class="btn-icon"><span class="fas fa-info-circle"></span></span>
                <span class="btn-text">How to edit</span>
            </a>
            <a class="btn btn-sm btn-primary" href="https://github.com/TYPO3-Documentation/DocsTypo3Org-Homepage/edit/main/Documentation/Index.rst" id="btnEditOnGitHub" rel="nofollow noopener" target="_blank">
                <span class="btn-icon"><span class="fab fa-github"></span></span>
                <span class="btn-text">Edit on GitHub</span>
            </a>
        </div>
    </div>
{% endblock %}

{% block content %}
    {{ renderNode(node) }}
{% endblock %}

{% block footer %}
    {% if parts.footer %}
        {% for child in parts.footer -%}
            {{ renderNode(child) }}
        {%~ endfor -%}
    {% endif %}
{% endblock %}

{% block headerLinks %}
    {% for link in getPagerLinks() %}
        <link href="{{ link.url }}" rel="{{ link.relation }}" title="{{ link.title }}"/>
    {% endfor -%}
{% endblock %}


{% block pager %}
    {% set pagerLinks = getPrevNextLinks() %}

    {% if pagerLinks|length > 0 %}
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                {%- for link in pagerLinks -%}
                    {%- if link.relation=='prev' -%}
                        <li class="page-item">
                            <a class="page-link" href="{{ link.url }}"
                               title="Accesskey Alt(+Shift)+p">
                                Previous
                            </a>
                        </li>
                    {% elseif link.relation=='next' -%}
                        <li class="page-item">
                            <a class="page-link" href="{{ link.url }}"
                               title="Accesskey Alt(+Shift)+n">
                                Next
                            </a>
                        </li>
                    {% endif -%}
                {%- endfor -%}
            </ul>
        </nav>
    {% endif %}
{% endblock %}
