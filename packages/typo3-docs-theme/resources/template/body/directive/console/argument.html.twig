<section data-search-title="{{ node.plainContent }}" data-search-id="{{ node.anchor }}" data-search-facet="Console Command Argument">
    <h3 class="sr-only">{{ node.plainContent }}</h3>
<dl class="argument">
    <dt{% if not node.noindex %} id="{{ node.anchor }}"{% endif -%}>
        {% include "body/directive/console/parts/argumentHeader.html.twig" %}
    </dt>
    <dd>
        <dl class="field-list simple">
            {% if node.type != null %}
                <dt class="field-even">Type</dt>
                <dd class="field-even">{{ renderNode(node.type) }}
                </dd>
            {% endif -%}
        </dl>
        <div class="argument-description">
            {{ node.description }}
        </div>
        {% if node.value %}
        <div class="command-description-extended">
            {{ renderNode(node.value) }}
        </div>
        {% endif %}
    </dd>
</dl>
</section>
