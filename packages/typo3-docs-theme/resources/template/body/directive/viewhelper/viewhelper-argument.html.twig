<dl class="confval">
    <dt{% if not argument.noindex %} id="{{ argument.anchor }}"{% endif %} class="d-flex justify-content-between">
        <div class="confval-header">
            <code class="sig-name descname"><span class="pre">{{ argument.plainContent }}</span></code>
            {% if not argument.noindex %}
                <a class="headerlink" href="#{{ argument.anchor }}" data-bs-toggle="modal" data-bs-target="#linkReferenceModal" data-id="{{ argument.anchor }}" data-rstCode="{{ getRstCodeForLink(argument) }}"  title="Reference this configuration value">Â¶</a>
            {% else %}
                <span class="headerNoindex" title="This configuration value cannot be linked directly. Consider to link to the section above."><i class="fa-solid fa-link-slash"></i></span>
            {% endif -%}
        </div>
        <div class="confval-back-to-top">
            {%- if backAnchor %}
                <a href="#{{ backAnchor }}" class="backToList" title="Back to list"><i class="fa-solid fa-angles-up fa-xs"></i></a>
            {% else %}
                <a href="#" class="backToTop" title="Back to top"><i class="fa-solid fa-arrow-up fa-xs"></i></a>
            {%- endif %}
        </div>
    </dt>
    <dd>
        <dl class="field-list simple">
            <dt class="field">Type</dt>
            <dd class="field">{{ argument.type }}
            </dd>
            {% if argument.defaultValue != null %}
                <dt class="field">Default</dt>
                <dd class="field">{{ argument.defaultValue }}
                </dd>
            {% endif %}
            {% if argument.required %}
                <dt class="field">Required</dt>
                <dd class="field">{{ argument.required }}
                </dd>
            {% endif %}
        </dl>
        <div class="confval-description">
            {{ argument.description }}
        </div>
    </dd>
</dl>
