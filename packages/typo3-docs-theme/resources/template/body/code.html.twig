{% if node.raw %}
    {# see the RawDirective for where this is coming from; a refactor is desired to move this onto its own template / renderer #}
    {{ node.value|raw }}
{%- else -%}
    {% if node.caption %}
        <div class="code-block-caption">
            <span class="caption-text">{{ node.caption }}</span>
        </div>
    {%- endif -%}
    <div class="highlight-{{ node.language }} notranslate {%- if node.classes %} {{ node.classesString }}{% endif %}">
        <div class="highlight">
            <pre><code class="{{ node.startingLineNumber ? ' line-numbers' }}" {{- node.startingLineNumber ? ' data-start=' ~ node.startingLineNumber }}><span>{{ node.value }}</span></code></pre>
        </div>
    </div>
{%- endif -%}
